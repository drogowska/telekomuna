        <Label Content="Magdalena Stopka, Daria Rogowska" FontSize="9" Foreground="Gray" HorizontalAlignment="Left" Margin="85,387,0,0" VerticalAlignment="Top" Width="157" RenderTransformOrigin="0.678,0.455"/>
        <TextBox Name="fileName" HorizontalAlignment="Left" Height="55" Margin="132,99,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="145" TextChanged="TextBox_TextChanged"/>
        <Label Content="Ścieżka do &#xD;&#xA;     pliku:" HorizontalAlignment="Left" Height="55" Margin="42,99,0,0" VerticalAlignment="Top" Width="85"/>

    </Grid>
